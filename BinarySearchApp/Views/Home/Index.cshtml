@model BinarySearchViewModel

<style>
    .container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f5f5f5;
        border-radius: 5px;
    }

    .title {
        text-align: center;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .result {
        text-align: center;
        margin-top: 20px;
        font-weight: bold;
    }
</style>

<div class="container">
    <h1 class="title">Binary Search App</h1>

    <form asp-action="Index" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="SearchArray">Array:</label>
            <!--// User Enter Number No else !-->
            <input asp-for="SearchArray" type="text" id="SearchArray" name="SearchArray" class="form-control" onkeypress="return isNumber(event)" />
        </div>
        <div class="form-group">
            <label asp-for="SearchElement">Element:</label>
            <input asp-for="SearchElement" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.Result))
    {
            <div class="result">
            @ViewBag.Result
            </div>
    }
</div>

@section Scripts {
<!-- // User Enter Number No else ! -->
<script>
    function isNumber(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        return true;
    }
</script>
}